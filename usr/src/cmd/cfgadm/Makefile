PROG= cfgadm

include ../Makefile.cmd

SED= sed
DCFILE= $(PROG).dc
OBJS= $(PROG).o getresponse.o

XGETFLAGS += -a -x cfgadm.xcl
CPPFLAGS += -I$(SRC)/common/util

LDLIBS += -lcfgadm

SMOFF += snprintf_overflow

.KEEP_STATE:

all: $(PROG)

$(PROG): $(OBJS)
	$(LINK.c) $(OBJS) -o $@ $(LDLIBS)
	$(POST_PROCESS)

%.o: $(SRC)/common/util/%.c
	$(COMPILE.c) $<
	$(POST_PROCESS_O)

install: all $(ROOTUSRSBINPROG)

clean:


$(DCFILE): $(PROG).c
	$(RM) $(DCFILE)
	$(COMPILE.cpp) $(PROG).c | \
	$(XGETTEXT) -t -
	$(SED) -e '/^domain/d' messages.po > $@
	$(RM) messages.po

include ../Makefile.targ
