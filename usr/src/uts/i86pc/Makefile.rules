	$(RM) $@
	$(CAT) $(DR_IO)/sbdgenerr.pl > $@
	$(CHMOD) +x $@

$(DR_IO)/dr_err.c:		$(DR_GENERR) $(SBD_IOCTL)
	$(RM) $@
	$(DR_GENERR) ESBD < $(SBD_IOCTL) > $(DR_IO)/dr_err.c

